<div style="font-size:72px;text-align: center;">🍋💦💰LEMON SQUEEZY🍋💦💰</div>
<div style="font-size:32px;text-align: center;">SQUEEZE THE JUICE</div>
</br>
</br>

<table> 
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Is Squeeze? 🍋💦</th>
      <th>Squeezoor 🎯</th>
      <th>short ratio score</th>
      <th>short float score</th>
      <th>volume score</th>
      <th>volatility score</th>
      <th>Date</th>
      <th>Short Ratio</th>
      <th>Short Float</th>
      <th>RSI (14)</th>
      <th>Volume</th>
      <th>Volatility</th>
    </tr>
  </thead>
  <tbody>
    <% @ticker_info.each do |ti| %>
      <tr>
        <td style="font-weight:bold;"><a href="https://finance.yahoo.com/quote/<%= ti.symbol %>/"><%= ti.symbol %></a></td>
        <td><%= ti.is_squeeze? ? "✔️" : "❌" %></td>
        <td style="font-weight:bold;"><%= ti.squeeze_score.truncate(2) %></td>
        <td><%= ti.short_ratio_score.truncate(2) %></td>
        <td><%= ti.short_float_score.truncate(2) %></td>
        <td><%= ti.volume_score.truncate(2) %></td>
        <td><%= ti.volatility_score.truncate(2) %></td>
        <td><%= ti.created_at.in_time_zone("Mountain Time (US & Canada)").to_date %></td>
        <td><%= ti.short_ratio %></td>
        <td><%= ti.short_float %></td>
        <td><%= ti.rsi %></td>
        <td><%= ti.volume %></td>
        <td><%= ti.volatility %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>
<h1>All available data for inspection purposes</h1>
<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <% @ticker_info.first.full_payload.keys.each do |key| %>
        <th><%= key %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @ticker_info.each do |ti| %>
      <tr>
      <td style="font-weight:bold;"><a href="https://finance.yahoo.com/quote/<%= ti.symbol %>/"><%= ti.symbol %></a></td>
        <% ti.full_payload.each do |k, v| %>
          <td><%= v %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>